<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_view_container_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="com.example.alexkappelmann.simon.GameControllerActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/darker_gray"
            android:digits="2"
            android:gravity="left"
            android:labelFor="@+id/scoreText"
            android:layout_weight="0.22"
            android:text="Score: "
            android:textColor="@color/colorPrimary"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/scoreNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"

            android:background="@android:color/darker_gray"
            android:ems="10"
            android:gravity="left"
            android:text="0"
            android:textColor="#590699"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/bestScoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="right"
            android:background="@android:color/darker_gray"
            android:gravity="end"
            android:text="Best: "
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <TextView android:id="@+id/bestScoreNumber"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0.25"
            android:layout_gravity="left"

            android:background="@android:color/darker_gray"

            android:ems="10"
            android:text="0"
            android:textColor="#590699"
            android:textSize="40sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:layout_marginTop="40dp"

        android:text="status"
        android:textColor="#fe03e9"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>

